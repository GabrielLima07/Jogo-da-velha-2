<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFA941"
    tools:context=".activities.Ranking">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bgroundack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tictactoe_bg"
        tools:context=".activities.Ranking">

        <ImageView
            android:id="@+id/imageViewRankIcon"
            android:layout_width="33dp"
            android:layout_height="34dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toStartOf="@+id/textViewLeaderboard"
            app:layout_constraintTop_toBottomOf="@+id/imageViewTrophy"
            app:layout_constraintVertical_bias="0.49"
            app:srcCompat="@android:drawable/btn_star" />

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="37dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#FDFDFD"
            android:contentDescription="@string/back_button_description"
            android:src="@mipmap/flechaicon_foreground"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.005"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.058"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
            tools:src="@mipmap/flechaicon_foreground" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="347dp"
            android:layout_height="168dp"
            android:background="@drawable/layout_bg"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.547"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="445dp">


            <LinearLayout
                android:id="@+id/linearLayoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRankHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rank"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewNomeHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nome"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewPontuacaoHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pontuação"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutRank1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRank1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1°" />

                <TextView
                    android:id="@+id/textViewNome1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giovanna" />

                <TextView
                    android:id="@+id/textViewPontuacao1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="500" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutRank2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRank2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2°" />

                <TextView
                    android:id="@+id/textViewNome2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gabriel" />

                <TextView
                    android:id="@+id/textViewPontuacao2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="500" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutRank3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRank3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3°" />

                <TextView
                    android:id="@+id/textViewNome3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Paty" />

                <TextView
                    android:id="@+id/textViewPontuacao3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="500" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutRank4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRank4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4°" />

                <TextView
                    android:id="@+id/textViewNome4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Filipe"
                    />

                <TextView
                    android:id="@+id/textViewPontuacao4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="500" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutRank5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRank5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5°" />

                <TextView
                    android:id="@+id/textViewNome5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guilherme" />

                <TextView
                    android:id="@+id/textViewPontuacao5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="500" />

            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewTrophy"
            android:layout_width="140dp"
            android:layout_height="104dp"
            android:layout_marginTop="152dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/trophy" />

        <ImageView
            android:id="@+id/imageViewStarIcon"
            android:layout_width="33dp"
            android:layout_height="34dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textViewLeaderboard"
            app:layout_constraintTop_toBottomOf="@+id/imageViewTrophy"
            app:srcCompat="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/textViewLeaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="324dp"
            android:text="Leaderboard"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.029"
            android:textSize="30sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
